  <div class="dhud-context-menu" id="dhud-context-menu">
    <div class="dhud-context-item" data-action="apply-status">
      <i class="fas fa-magic"></i>
      Toggle Conditions 
    </div>
    <div class="dhud-context-item" data-action="short-rest">
      <i class="fas fa-utensils"></i>
      Short Rest
